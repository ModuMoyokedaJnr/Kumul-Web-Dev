/* Color helpers */
function colorForType(type) {
  const pal = {
    Expense: ["#ff6b6b", "#ef5350", "#e53935"],
    Liability: ["#ff8a80", "#ff5252"],
    Revenue: ["#4caf50", "#66bb6a"],
    Asset: ["#42a5f5", "#29b6f6"],
    Equity: ["#ab47bc", "#ba68c8"]
  };
  return pal[type] || ["#90a4ae"];
}
